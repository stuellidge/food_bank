<%- model_class = @referring_agency.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @referring_agency.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_id) %>:</strong></dt>
  <dd><%= @referring_agency.address_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_information_id) %>:</strong></dt>
  <dd><%= @referring_agency.contact_information_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              referring_agencies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_referring_agency_path(@referring_agency), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              referring_agency_path(@referring_agency),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
