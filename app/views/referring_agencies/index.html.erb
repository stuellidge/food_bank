<%- model_class = ReferringAgency.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address_id) %></th>
      <th><%= model_class.human_attribute_name(:contact_information_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @referring_agencies.each do |referring_agency| %>
      <tr>
        <td><%= link_to referring_agency.id, referring_agency_path(referring_agency) %></td>
        <td><%= referring_agency.name %></td>
        <td><%= referring_agency.address_id %></td>
        <td><%= referring_agency.contact_information_id %></td>
        <td><%=l referring_agency.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_referring_agency_path(referring_agency), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      referring_agency_path(referring_agency),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_referring_agency_path,
            :class => 'btn btn-primary' %>
