<%- model_class = OtherOccupant.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:forename) %></th>
      <th><%= model_class.human_attribute_name(:surname) %></th>
      <th><%= model_class.human_attribute_name(:sex) %></th>
      <th><%= model_class.human_attribute_name(:date_of_birth) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @occupants.each do |occupant| %>
      <tr>
        <td><%= link_to occupant.id, household_other_occupant_path(@household, occupant) %></td>
        <td><%= occupant.title %></td>
        <td><%= occupant.forename %></td>
        <td><%= occupant.surname %></td>
        <td><%= occupant.sex %></td>
        <td><%= occupant.date_of_birth %></td>
        <td><%=l occupant.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_household_other_occupant_path(@household, occupant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      household_other_occupant_path(@household, occupant),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_household_other_occupant_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.return', :default => t("helpers.links.return")),
            household_path(@household),
            :class => 'btn' %>