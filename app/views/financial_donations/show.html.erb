<%- model_class = @financial_donation.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:donated) %>:</strong></dt>
  <dd><%= @financial_donation.donated %></dd>
  <dt><strong><%= model_class.human_attribute_name(:donor_id) %>:</strong></dt>
  <dd><%= @financial_donation.donor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @financial_donation.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gift_aid) %>:</strong></dt>
  <dd><%= @financial_donation.gift_aid %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              financial_donations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_financial_donation_path(@financial_donation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              financial_donation_path(@financial_donation),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
