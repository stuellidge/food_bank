<%- model_class = @donor.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @donor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @donor.address %></dd>
  <% if @donor.contact_information.email? %>
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @donor.contact_information.email %></dd>
  <% end %>
  <% if @donor.contact_information.telephone? %>
    <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
    <dd><%= @donor.contact_information.telephone %></dd>
  <% end %>
  <% if @donor.contact_information.mobile? %>
    <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
    <dd><%= @donor.contact_information.mobile %></dd>
  <% end %>
  <% if @donor.contact_information.facsimile? %>
    <dt><strong><%= model_class.human_attribute_name(:facsimile) %>:</strong></dt>
    <dd><%= @donor.contact_information.facsimile %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              donors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_donor_path(@donor), :class => 'btn' %>
  <%= link_to t(:create_food_donation), new_food_donation_path(:donor => @donor), :class => 'btn' %>
  <%= link_to t(:create_cash_donation), new_financial_donation_path(:donor => @donor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              donor_path(@donor),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
